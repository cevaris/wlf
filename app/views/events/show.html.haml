.container
  %p#notice= notice

  .row
    %p
      %b Name:
      = @event.name
    %p
      %b Description:
      = @event.description.html_safe
  .row.text-center
    .row
      .col-xs-6.col-md-6
        %h2 Start Event
      .col-xs-6.col-md-6
        %h2 End Event
    .row
      .col-xs-6.col-md-6
        = @event.start_date
      .col-xs-6.col-md-6
        = @event.end_date

  %hr
  %h2 Sponsor Rewards
  .row
    - @event.event_rewards.each do |reward|
      .row
        .col-xs-4.col-md-4
          .row
            = reward.name
          .row
            = currency_symbol
            = reward.price
        .col-xs-8.col-md-8
          = reward.description.html_safe
      %br

  %hr
  %h2 Sponsor Form
  .row
    - @event.form_questions.each do |question|
      .row
        = question.name
      %br


  = link_to 'Edit', edit_event_path(@event)
  \|
  = link_to 'Back', events_path

  %p
    = link_to 'Apply', new_event_event_submission_path(@event)
