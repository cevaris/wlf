.nested-fields
  .row
    .col-md-5
      .form-group
        = f.text_field :name, class: 'form-control', placeholder: 'Reward Name'
    .col-md-5
      .form-group.input-group
        %span.input-group-addon
          = currency_symbol
        = f.text_field :price, class: 'form-control'
    .col-md-2
      .form-group
        = link_to_remove_association 'Delete Reward', f, {class: 'btn btn-default form-control'}
  .row
    .col-md-12
      = f.text_area :description, class: 'form-control wysihtml5', placeholder: 'Reward Description'
  %br
