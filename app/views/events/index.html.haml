.container
  %h1 Listing events

  %table.table
    %thead
      %tr
        %th Name
        %th Start date
        %th End time
        %th Options

    %tbody
      - @events.each do |event|
        %tr
          %td= link_to event.name, event
          %td= event.formatted_start_date
          %td= event.formatted_end_date
          %td
            - unless can? :manage, Event
              = link_to 'Apply', new_event_event_submission_path(event), class: 'btn btn-primary', method: :get
            - else
              .btn-group
                %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
                  Options
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    = link_to 'Show', event
                  %li
                    = link_to 'Edit', edit_event_path(event)
                  %li
                    = link_to 'Generate Report', event_generate_report_path(event, format: 'csv')
                  %li
                    = link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Event', new_event_path
